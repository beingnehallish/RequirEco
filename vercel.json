{
  "version": 2,
  "projects": [
    {
      "name": "frontend",
      "rootDirectory": "frontend",
      "buildCommand": "npm install && npm run build",
      "outputDirectory": "dist",
      "installCommand": "npm install"
    },
    {
      "name": "backend",
      "rootDirectory": "backend",
      "buildCommand": "",
      "startCommand": "npm install && npm start",
      "installCommand": "npm install"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    }
  ]
}
